<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/podcast_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/podcast_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_toLeftOf="@+id/podcast_detail_image" />

    <ImageView
        android:id="@+id/podcast_detail_image"
        android:layout_width="128dip"
        android:layout_height="128dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/podcast_detail_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/podcast_detail_title"
        android:layout_toLeftOf="@+id/podcast_detail_image" />

    <TextView
        android:id="@+id/podcast_detail_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/podcast_detail_image"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/podcast_detail_image" />

    <TextView
        android:id="@+id/podcast_detail_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/podcast_detail_copyright"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/podcast_detail_image" />

    <TextView
        android:id="@+id/podcast_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/podcast_detail_image"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/podcast_detail_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/podcast_detail_description" />

    <ListView
        android:id="@+id/podcast_detail_episode_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/podcast_detail_link"
        android:layout_alignParentLeft="true" >
    </ListView>

</RelativeLayout>